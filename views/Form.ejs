<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        background-color: antiquewhite;
      }
      .card-container {
        position: relative;

        width: 100%;
        height: 100vh;
        display: flex;
        flex-wrap: wrap;
        margin: 0 0;
        top: 0;
      }

      .card {
        font-family: cursive;
        box-shadow: 3px 10px 20px rgba(0, 0, 0, 0.2);
        border-radius: 30px;
        margin: 10px 10px;
        padding: 0px 10px;
        background-color: rgb(167, 223, 243);
        width: 350px;
        height: 280px;
      }
      button {
        background-color: rgb(255, 195, 92);
        font-size: 1rem;
        width: 65px;
        height: 25px;
        cursor: pointer;
        color: white;
        border: none;
        border-radius: 10px;
      }
      button:active {
        background-color: rgb(233, 147, 42);
        color: red;
      }
      .navbar {
        width: 100%;
        height: 10vh;
      }
      .new-recipe {
        background-color: rgb(250, 133, 78);
        width: 20%;
        border: 2px solid brown;
        text-align: center;
        left: 35%;
        position: relative;
        top: 10px;
        font-size: 1.5rem;
        cursor: pointer;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande";
        color: white;
      }
    </style>
    <title>Recipes Form</title>
  </head>
  <body>
    <div class="navbar">
      <a href="/newrecipes" class="new-recipe">Add new recipe</a>
    </div>
    <div class="card-container">
      <% item.forEach(i => { %>
      <div class="card">
        <h2 class="heading1">Recipe Name:<%= i.recipeName %></h2>
        <h2>Recipe time:<%= i.recipeTime %>mins</h2>
        <h2>Recipe ingredients:</h2>
        <ul>
          <% i.ingredients.map(e => { %>
          <li><%= e %></li>
          <% }); %>
        </ul>
        <div style="display: flex; justify-content: space-around">
          <div style="font-size: 1.4rem">Servings:<%= i.serves %>person</div>
          <form action="/<%=i._id %>/delete" method="post">
            <button type="submit">Delete</button>
          </form>
          <form action="/<%= i._id %>/edit" method="get">
            <button type="submit">Edit</button>
          </form>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
