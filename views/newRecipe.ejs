<!-- views/new.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Add New Recipe</title>
  </head>

  <body>
    <h1>New Recipe</h1>
    <form action="/newrecipes" method="post">
      <div>
        <label for="recipeName">Recipe name:</label>
        <input type="text" id="recipeName" name="recipeName" />
      </div>
      <div>
        <label for="recipeTime">Recipe Time(in minutes):</label>
        <textarea id="recipeTime" name="recipeTime"></textarea>
      </div>
      <div>
        <label for="ingredients">Ingredients</label>
        <textarea id="ingredients" name="ingredients"></textarea>
      </div>
      <div>
        <label for="serves">Serves(persons):</label>
        <textarea id="serves" name="serves"></textarea>
      </div>
      <button type="submit">Save</button>
    </form>
  </body>
</html>
